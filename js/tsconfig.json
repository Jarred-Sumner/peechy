{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",

    "strict": false,
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": false,
    // Generate d.ts files
    "declaration": true,
    // This compiler run should
    // only output d.ts files
    "skipLibCheck": true,

    "emitDeclarationOnly": true,
    "rootDir": ".",
    "types": ["@types/node"],
    "outDir": "."
  },
  "exclude": ["*.zig"],
  "include": ["*.ts"]
}
