{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": false,
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": false,
    // Generate d.ts files
    "declaration": true,
    // This compiler run should
    // only output d.ts files
    "emitDeclarationOnly": true,
    "typeRoots": ["./typeroot/types.d.ts", "@types"],
    "types": ["@types/node"],
    "outFile": "peechy.d.ts"
  },
  "exclude": ["*.zig"]
}
